{
  "dataset_reader": {
    "type": "unaligned_corpora"
  },
  // "train_data_path": "toy_data/len10/train_with_answers.txt",
  "train_data_path": "toy_data/len10/dev_with_answers.txt",
  "validation_data_path": "toy_data/len10/dev_with_answers.txt",

  "model": {
    "type": "mt_gan",
    "g_metrics_to_print": "loss-accuracy",
    // "beam_size": 5,
    // ============= GENERRATORS ARCHITECTURE =============
    "generators": {
      "type": "rnn2rnn",
      "embedding_dim": 30,
      "max_decoding_steps": 11,
      "encoder": {
        "type": "lstm",
        "input_size": 30,
        "hidden_size": 30,
        "num_layers": 1,
        "bidirectional": true
      },
      "attention": {
        "type": "dot_product"
      }
    },

    // ============= DISCRIMINATORS ARCHITECTURE =============
    "discriminators": {
      "type": "seq2prob",
      "embedding_dim": 30,
      "encoder": {
        "type": "lstm",
        "input_size": 30,
        "hidden_size": 30,
        "num_layers": 1,
        "bidirectional": true
      }
    }
  },

  "iterator": {
    "type": "basic",
    "batch_size" : 3
    // "padding_noise": 0.0,
    //"sorting_keys": [["source_tokens", "num_tokens"]]
  },

  "trainer": {
    "num_epochs": 2,
    "patience": 10,
    "shuffle": false,
    "cuda_device": -1,
    "optimizer": {
      "type": "adam",
      "lr": 0.01
    }
  }
}