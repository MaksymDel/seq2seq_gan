{
    "dataset_reader": {
        "type": "unaligned_corpora"
    },
    "iterator": {
        "type": "basic",
        "batch_size": 3
    },
    "model": {
        "type": "mt_gan",
        "discriminators": {
            "type": "seq2prob",
            "embedding_dim": 30,
            "encoder": {
                "type": "lstm",
                "bidirectional": true,
                "hidden_size": 30,
                "input_size": 30,
                "num_layers": 1
            }
        },
        "generators": {
            "type": "rnn2rnn",
            "attention": {
                "type": "dot_product"
            },
            "beam_size": 5,
            "embedding_dim": 30,
            "encoder": {
                "type": "lstm",
                "bidirectional": true,
                "hidden_size": 30,
                "input_size": 30,
                "num_layers": 1
            },
            "max_decoding_steps": 15
        }
    },
    "train_data_path": "toy_data/train.txt",
    "validation_data_path": "toy_data/dev.txt",
    "trainer": {
        "cuda_device": -1,
        "num_epochs": 2,
        "optimizer": {
            "type": "adam",
            "lr": 0.01
        },
        "patience": 10,
        "shuffle": false
    }
}